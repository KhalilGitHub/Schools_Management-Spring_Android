<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/img_find_student"
                android:layout_width="match_parent"
                android:layout_height="250dp"

                android:src="@mipmap/img_student_01"
                android:scaleType="fitXY"
                />


            <TextView
                android:id="@+id/tv_find_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_find_student"
                android:text="Find Student"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="45dp"
                android:textAlignment="center"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_find_student"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_find_student"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:hint="Enter Reference"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="@drawable/style_edit_text_01"
                    />

                <Button
                    android:id="@+id/btn_find_student"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Find"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/style_btn_text_01"
                    />

            </LinearLayout>



        </RelativeLayout>

    </ScrollView>

</LinearLayout>